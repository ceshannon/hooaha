    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_icon2"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon, android:theme">
        <activity
            android:name=".LoadActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_main" />

        <activity
            android:name=".LogoActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
        </activity>

        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <service android:name=".xmpp.XmppService">
            <intent-filter>
                <action android:name="xmppservice"></action>
            </intent-filter>
        </service>
        <activity android:name=".AddFriendActivity"></activity>
        <activity android:name=".ChatActivity" />
        <activity android:name=".ShowMessageActivity" />

        <provider
            android:name="com.hooaha.andr.im.zuzhii.xmpp.XmppContentProvider"
            android:authorities="com.hooaha.andr.im.zuzhii.xmpp"
            android:exported="true" />

        <provider
            android:name="com.hooaha.andr.im.zuzhii.xmpp.XmppFriendMessageProvider"
            android:authorities="com.hooaha.andr.im.zuzhii.xmpp.chat"
            android:exported="true" />

    </application>

</manifest>